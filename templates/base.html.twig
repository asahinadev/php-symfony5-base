<!DOCTYPE html>
<html lang="ja" class="h-100">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('/bootstrap/4.5.0/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('/fontawesome/5.13.1-free/css/all.min.css') }}">
        <link rel="stylesheet" href="{{ asset('/application/css/common.css') }}">
        {% block stylesheets %}{% endblock %}

        <script src="{{ asset('/jquery/3.5.1/jquery.min.js') }}"></script>
        <script src="{{ asset('/popperjs/2.4.4/popper.min.js') }}"></script>
        <script src="{{ asset('/bootstrap/4.5.0/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('/application/js/common.js') }}"></script>
        {% block javascripts %}{% endblock %}

    </head>
    <body class="d-flex flex-column h-100">

        <!-- Fixed navbar -->
        <header>
            <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
                <a class="navbar-brand" href="#">SYSTEM</a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ asset('/') }}">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ asset('/users') }}">Users</a>
                        </li>
                    </ul>
                    <form class="form-inline mt-2 mt-md-0">
                        <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                    </form>
                </div>
            </nav>
        </header>

        {% block body %}{% endblock %}

        <footer class="footer mt-auto py-3">
            <div class="container">
                <span class="text-muted">Place sticky footer content here.</span>
            </div>
        </footer>
    </body>
</html>
